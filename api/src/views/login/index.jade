
extends ../layout

block content
  h1 Login
  
  div
    form(role='form' class='form-horizontal' id="configureform")
      div(class='form-group')
        label(class='control-label col-sm-2') Session
        div(class='col-sm-10')
          input(type='text' name='session')

      div(class='form-group')
        label(class='control-label col-sm-2') Password
        div(class='col-sm-10')
          input(type='text' name='apikey')

      div(class='form-group')
        div(class='col-sm-10')
          input(class='btn btn-default' type='button' onclick='ajaxRequest("POST","/login","configureform")' value='Login')